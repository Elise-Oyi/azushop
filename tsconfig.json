{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Important for imports
    "noEmit": true, // ✅ We don’t emit .js files since Vercel uses ts-node / SWC
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}

